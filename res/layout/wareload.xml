<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" > 
     <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
           <TextView
                android:id="@+id/Truck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="货车号："
                android:textColor="#000"
                android:textSize="17sp" />
             <Spinner  
                 android:id="@+id/spinner_truck"  
                 android:layout_width="wrap_content"  
                 android:layout_height="wrap_content"                  
                />   
    </LinearLayout>
     <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
           <TextView
                android:id="@+id/tv_customerId"
                android:layout_width="120dip" 
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="客户号"
                android:textColor="#000"
                android:textSize="17sp" />
          <TextView
                android:id="@+id/tv_warename"
                android:layout_width="67dip" 
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="货物"
                android:textColor="#000"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/tv_wareNums"
               android:layout_width="67dip" 
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="件数"
                android:textColor="#000"
                android:textSize="17sp" />
           <TextView
                android:id="@+id/tv_select"
               android:layout_width="67dip" 
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="选择"
                android:textColor="#000"
                android:textSize="17sp" />
    </LinearLayout>
      <ListView   
        android:id="@+id/ware_listView"  
        android:layout_marginTop="5dp"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"  
        android:layout_weight="1"  
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_margin="5dip"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/load_OK"
            android:background="@drawable/top_bg"  
            android:layout_width="wrap_content"
            android:layout_height="48dip"                    
            android:text="完成"
             android:layout_weight="1"
            android:textSize="15dip" />
         <Button
            android:id="@+id/load_to_login"
            android:background="@drawable/top_bg"  
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_marginLeft="10dp"            
            android:text="返回"
             android:layout_weight="1"
            android:textSize="15dip" />
    </LinearLayout>
</LinearLayout>
